<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".instagram.InstaLoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_outstagram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/id_input"
        android:layout_width="356dp"
        android:layout_height="62dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/insta_input_bg"
        android:hint="아이디"
        android:paddingLeft="27dp"
        android:textColorHint="#1E1D1D"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/pw_input"
        android:layout_width="356dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/insta_input_bg"
        android:hint="비밀번호"
        android:paddingLeft="27dp"
        android:textColorHint="#1E1D1D"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/id_input"
        app:layout_constraintStart_toStartOf="@+id/id_input"
        app:layout_constraintTop_toBottomOf="@+id/id_input" />

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="162dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/insta_login"
        android:gravity="center"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/pw_input"
        app:layout_constraintStart_toStartOf="@+id/pw_input"
        app:layout_constraintTop_toBottomOf="@+id/insta_join" />


    <TextView
        android:id="@+id/insta_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="가입하기"
        android:textColor="#1868e8"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pw_input"
        app:layout_constraintTop_toBottomOf="@+id/pw_input" />


</androidx.constraintlayout.widget.ConstraintLayout>